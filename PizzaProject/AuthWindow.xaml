<Window x:Class="PizzaProject.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaProject"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="C:\Users\dania\source\DodoPizza\PizzaProject\image.png" Grid.Column="0"/>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Vertical" Margin="130,0,166,0" Height="263">
            <TextBlock Text="Логин" FontSize="23" FontWeight="Bold" Height="29" HorizontalAlignment="Center" Margin="0, 0, 0, 10"/>
            <TextBox Grid.Column="1" Width="130" HorizontalAlignment="Center" Margin="0, 0, 0, 30"  Text="{Binding Login}"/>
            <TextBlock Text="Пароль" FontSize="23" FontWeight="Bold" Height="29" HorizontalAlignment="Center" Margin="0, 0, 0, 10"/>
            <TextBox Grid.Column="1" Width="130" HorizontalAlignment="Center" Text="{Binding Password}"/>
            <Button Width="220" Height="25" Margin="0, 50, 0, 0"
                    Click="AuthButtonClick" Content="Войти"/>
            <Button Width="220" Height="25" Margin="0, 10, 0, 0"
                    Click="RegistButtonClick" Content="Регистрация"/>
        </StackPanel>

    </Grid>
</Window>
