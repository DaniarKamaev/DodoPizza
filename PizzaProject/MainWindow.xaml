<Window x:Class="PizzaProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10,10,130,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox x:Name="menuListBox" Margin="10,10,0,10" Grid.RowSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                        <TextBlock Text="{Binding Price, StringFormat='Цена: {0} руб.'}"/>
                        <TextBlock Text="{Binding Grams, StringFormat='Вес: {0}г'}"/>
                        <TextBlock Text="{Binding Сalories, StringFormat='Калории: {0}'}"/>
                        <Button Click="batton_Click" Content="Добавить в корзину" Tag="{Binding}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" Margin="0,0,-120,0">
            <Button Content="Корзина"
                Grid.Row="0" 
                HorizontalAlignment="Right"
                Height="43" Width="102"
                Click="basket_Click"
                Margin="0,10,10,0"
                Grid.RowSpan="2"/>
            <Button Content="Оформить заказ" 
                Height="45" 
                Background="Orange" 
                FontWeight="Bold"
                Padding="10,0" Width="112"
                Margin="0,10,4,0"
                HorizontalAlignment="Right"/>
        </StackPanel>

    </Grid>
</Window>
